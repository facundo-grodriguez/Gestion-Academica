@page
@model SistemaAcademico.Pages.Carreras.EditModel
@{
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <form method="post" class="p-4 border rounded shadow-sm bg-white">
            <input type="hidden" asp-for="Carrera.Id" />

            <h4 class="mb-4 text-primary">Editar Carrera</h4>

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="Carrera.Nombre" class="form-label fw-semibold"></label>
                <input asp-for="Carrera.Nombre" class="form-control" />
                <span asp-validation-for="Carrera.Nombre" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Carrera.Anios" class="form-label fw-semibold"></label>
                <input asp-for="Carrera.Anios" class="form-control" />
                <span asp-validation-for="Carrera.Anios" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Carrera.Titulo" class="form-label fw-semibold"></label>
                <input asp-for="Carrera.Titulo" class="form-control" />
                <span asp-validation-for="Carrera.Titulo" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Carrera.Modalidad" class="form-label fw-semibold"></label>
                <select asp-for="Carrera.Modalidad"
                        asp-items="@(new SelectList(Model.Modalities))"
                        class="form-control">
                    <option value="">Seleccione una modalidad</option>
                </select>
                <span asp-validation-for="Carrera.Modalidad" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle-fill"></i> Guardar
                </button>
                <a asp-page="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-x-circle"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</div>
