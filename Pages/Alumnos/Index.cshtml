@page
@model SistemaAcademico.Pages.Alumnos.IndexModel

<a asp-page="Create" class="btn btn-success mb-4">
    <i class="bi bi-person-plus-fill"></i> Agregar Alumno
</a>

@if (Model.Alumnos.Count == 0)
{
    <div class="alert alert-warning" role="alert">
        <i class="bi bi-info-circle-fill"></i> No hay alumnos cargados.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle shadow-sm border rounded">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>DNI</th>
                    <th>Email</th>
                    <th>Fecha de nacimiento</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var alumno in Model.Alumnos)
                {
                    <tr>
                        <td>@alumno.Id</td>
                        <td>@alumno.Nombre</td>
                        <td>@alumno.Apellido</td>
                        <td>@alumno.DNI</td>
                        <td>@alumno.Email</td>
                        <td>@alumno.FechaNacimiento.ToString("dd/MM/yyyy")</td>
                        <td class="text-center">
                            <a asp-page="Edit" asp-route-id="@alumno.Id" class="btn btn-outline-warning btn-sm me-1">
                                <i class="bi bi-pencil-fill"></i>
                            </a>
                            <a asp-page="Delete" asp-route-id="@alumno.Id" class="btn btn-outline-danger btn-sm">
                                <i class="bi bi-trash3-fill"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

