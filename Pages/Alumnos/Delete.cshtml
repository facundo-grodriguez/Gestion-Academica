@page
@model SistemaAcademico.Pages.Alumnos.DeleteModel
@{
}
<input type="hidden" asp-for="Alumno.Id" />

<form method="post" class="p-4 border rounded shadow-sm bg-light">
    <h4 class="mb-4 text-danger"><i class="bi bi-exclamation-triangle-fill"></i> Vas a eliminar al siguiente alumno:</h4>

    <div class="mb-2">
        <strong class="text-dark">Nombre:</strong> <span class="text-muted">@Model.Alumno?.Nombre</span>
    </div>
    <div class="mb-2">
        <strong class="text-dark">Apellido:</strong> <span class="text-muted">@Model.Alumno?Apellido</span>
    </div>
    <div class="mb-2">
        <strong class="text-dark">DNI:</strong> <span class="text-muted">@Model.Alumno?.DNI</span>
    </div>
    <div class="mb-2">
        <strong class="text-dark">Email:</strong> <span class="text-muted">@Model.Alumno?.Email</span>
    </div>
    <div class="mb-4">
        <strong class="text-dark">Fecha de nacimiento:</strong> <span class="text-muted">@Model.Alumno?.FechaNacimiento.ToString("dd/MM/yyyy")</span>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash3-fill"></i> Eliminar
        </button>
        <a asp-page="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Cancelar
        </a>
    </div>
</form>
